<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');

class Publishers extends CI_Controller 
{
	protected $_editStatus = 'Operation complete.';
	
	public function __construct()
	{
		parent::__construct();
		$this->load->helper('formd');
		$this->load->library('form_validation');
		$this->load->model('Publishers_model', 'publishers');
	}

	public function index()
	{
		if($this->_destroy())
			$data['success'] = $this->_editStatus;
			
		$data['publishers'] = $this->publishers->all();
		$this->load->view('publishers/index', $data);
	}
	
	public function new_one()
	{
		if($this->_create())
			$data['success'] = $this->_editStatus;
			
		$data['publishersDataTypes'] = $this->publishers->get_data_types();
		$this->load->view('publishers/new_one', $data);
	}
	
	protected function _create()
	{
		if($this->input->post('create'))
			if($this->form_validation->run())
			{	
				unset($_POST['create']);
				if($this->publishers->create($_POST))
				{	
					unset($_POST);
					return TRUE;
				}
			}
		return FALSE;
	}
	
	public function show($id)
	{
		$data['publishers'] = $this->publishers->find(array('id' => $id));
		$this->load->view('publishers/show', $data);
	}
	
	public function edit($id)
	{
		if($this->_update())
			$data['success'] = $this->_editStatus;
			
		$data['publishersDataTypes'] = $this->publishers->get_data_types();
		$data['publishers'] = $this->publishers->find(array('id' => $id));
		$this->load->view('publishers/edit', $data);
	}
	
	protected function _update()
	{
		if($this->input->post('update'))
			if($this->form_validation->run())
			{	
				unset($_POST['update']);
				if($this->publishers->update($_POST))	
				{	
					unset($_POST);
					return TRUE;
				}
			}
		return FALSE;
	}
	
	protected function _destroy()
	{
		if($this->input->post('delete'))
			if($this->form_validation->run('publishers/_destroy'))
			{
				unset($_POST['delete']);
				if($this->publishers->delete($_POST))	
				{	
					unset($_POST);
					return TRUE;
				}
			}
		return FALSE;
	}
}

/* End of file publishers.php */
/* Location: ./application/controllers/publishers.php */