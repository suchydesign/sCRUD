<?php if ( ! defined('BASEPATH')) exit('No direct script access allowed');

class Authors extends CI_Controller 
{
	protected $_editStatus = 'Operation complete.';
	
	public function __construct()
	{
		parent::__construct();
		$this->load->helper('formd');
		$this->load->library('form_validation');
		$this->load->model('Authors_model', 'authors');
	}

	public function index()
	{
		if($this->_destroy())
			$data['success'] = $this->_editStatus;
			
		$data['authors'] = $this->authors->all();
		$this->load->view('authors/index', $data);
	}
	
	public function new_one()
	{
		if($this->_create())
			$data['success'] = $this->_editStatus;
			
		$data['authorsDataTypes'] = $this->authors->get_data_types();
		$this->load->view('authors/new_one', $data);
	}
	
	protected function _create()
	{
		if($this->input->post('create'))
			if($this->form_validation->run())
			{	
				unset($_POST['create']);
				if($this->authors->create($_POST))
				{	
					unset($_POST);
					return TRUE;
				}
			}
		return FALSE;
	}
	
	public function show($id)
	{
		$data['authors'] = $this->authors->find(array('id' => $id));
		$this->load->view('authors/show', $data);
	}
	
	public function edit($id)
	{
		if($this->_update())
			$data['success'] = $this->_editStatus;
			
		$data['authorsDataTypes'] = $this->authors->get_data_types();
		$data['authors'] = $this->authors->find(array('id' => $id));
		$this->load->view('authors/edit', $data);
	}
	
	protected function _update()
	{
		if($this->input->post('update'))
			if($this->form_validation->run())
			{	
				unset($_POST['update']);
				if($this->authors->update($_POST))	
				{	
					unset($_POST);
					return TRUE;
				}
			}
		return FALSE;
	}
	
	protected function _destroy()
	{
		if($this->input->post('delete'))
			if($this->form_validation->run('authors/_destroy'))
			{
				unset($_POST['delete']);
				if($this->authors->delete($_POST))	
				{	
					unset($_POST);
					return TRUE;
				}
			}
		return FALSE;
	}
}

/* End of file authors.php */
/* Location: ./application/controllers/authors.php */